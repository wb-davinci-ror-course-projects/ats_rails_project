<%= form_tag carts_path, method: "POST" do %>

<div class="ats_header_b">
  <%= @header %>
</div>

<div pull-right>
<div class="pad_col row">
<% @products.each do |p| %>
  <div class="col-md-6">
    <table>       
      <th>
      <% if Image.find_by(name: p.product_code) == nil %>
        <a class="a:hover" href='/images/<%= p.image %>.jpg/'>
          <img src="/images/<%= p.image %>.jpg/" width="180" height="135"></img>
        </a>
      <% else %>
        <% image = Image.find_by(name: p.product_code) %>
        <img src="<%= image_data_path(image.id, image.extension) %>" width="150" height="150">
      <% end %>
      </th>
        <td><b><h3 class="pad" style="color: #550808"><%= p.name.titlecase %></h3></b>
          <b><center><p style="color=black"><i>price  </i>$<%= "%.2f" % p.price %></p></center></b>
            <% CategorySale.where(category_id: p.category_id).each do |sale| %>
              <% if sale.percent_off > 1 %>
                <% price = (p.price) * ((100 - sale.percent_off)/100) %>
                  <h4 style="color: red">
                    <%= "Sales Price! $ #{"%.2f" % price}" %></h4>
                  <h4 class="pad" style="color: #927017"><%= p.description.capitalize %></h4>
                  <h5><a class="pad" href="/main/more_info/<%= p.id %>" style="color: rgba(6, 72, 133, 0.85)">
                    More details and applications...</a></h5>
                      <% if p.quantity > 0 %>
                          <h5 class='pad'>
                              <%= button_tag "Add to cart", name: "product_id", value: p.id %>
                          </h5>
                      <% else %> 
                        <h4 class="pad">"This item is currently out of stock."</h4>
                      <%end %>
              <% else %>
                <% if p.percent_off > 1 %>
                  <% price = (p.price) * ((100-p.percent_off)/100) %>
                  <center><h4 class="pad" style="color: red"><%= "Sales Price! $ #{"%.2f" % price}" %></h4></center>
                <% end %>
                  <h4 class="pad" style="color: #927017"><%= p.description.capitalize %></h4>
                  <h5><a class="pad" href="/main/more_info/<%= p.id %>" style="color: rgba(6, 72, 133, 0.85)">
                    More details and applications...</a></h5>
                      <% if p.quantity > 0 %>
                        <h5 class='pad'>
                          <%= button_tag "Add to cart", name: "product_id", value: p.id %>
                        </h5>
                      <% else %> 
                        <h4 class="pad">"This item is currently out of stock."</h4>
                      <%end %>
              <% end %>   
               </td>
    </table>  
<% end %> 
</div> 
<% end %>
</div>
</div>                         
<% end %>