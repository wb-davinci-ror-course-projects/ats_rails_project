<%= form_tag "/user/:id" do %>


<% if @error != nil %>
  <h2 style="color: rgb(156, 18, 18)"><%= @error %></h2>
<% end %>

<hr style="color: white">   
<div class="pad">
<div class="row">
  <div class="col-md-4" style="color: rgba(51, 51, 51, 0.67)">
    <h3 style="color: #1E5A53">
    
      <%= label_tag "username", "Edit username (optional)" %><br>
      <%= text_field_tag "username", @old_user.username, size: 20 %></i><br></br>
      <%= submit_tag "Update Username" %>
    
    </h3>
  </div>
  <div class="col-md-4" style="color: rgba(51, 51, 51, 0.67)">
    <h3 style="color: #1E5A53">
      <%= label_tag "password", "New password" %><br>
      <%= password_field_tag "password", "", size: 20 %><br></br>     
      
      <%= label_tag "password_confirmation", "Enter new password again"%><br>
      <%= password_field_tag "password_confirmation", "", size: 20 %><br></br>     
    </h3>  
      <%= submit_tag "Update Password" %>
  </div> 
</div>
</div>
<% end %>
