<%= form_tag place_order_path, method: "PUT" do %>
<h1>Order</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Ship method</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
    <% p = Product.find(cart.product_id) %>
      <tr>
        <td><%= cart.product_id %></td>
        <td><%= p.name %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.ship_method %></td>
    <% end %>
  </tbody>
</table>

<br>
****TODO: Select payment method  ******
<%= submit_tag 'Place Order' %><br><br>
<% end %>
