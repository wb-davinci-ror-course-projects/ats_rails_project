<%= form_tag place_order_path, method: "PUT" do %>
<h1>Order</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
    <% p = Product.find(cart.product_id) %>
      <tr>
      <% if cart.quantity != 0 %>
        <td><%= p.name %></td>
        <td><%= cart.quantity %></td>
        <td>$<%= "%.2f" % cart.price %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
****TODO: Select payment method  ******
<%= button_tag 'Place Order' %><br><br>
<% end %>

