<%= render "layouts/admin" %>
<%= form_tag "/admin/product_sale" do %>
<% if @error != nil %>
  <h2 style="color: blue"><%= @error %></h2>
<% end %>

<div class="pad">
  <h2> Edit Product on Sale </h2>
<div class="row">
  <div class="col-md-3">
    <h3>
      <%= label_tag "product_code", "Product on sale" %><br>
      <%= select_tag "product_code", options_from_collection_for_select(Product.order(:id),
       :product_code, :product_code), prompt: "Choose product..." %><br></br>
  
      <%= label_tag "percent_off", "Enter the percentage off "%><h5><i>(if taking off sale enter 0)<i></h5><br>
      <%= text_field_tag "percent_off", "", size: 4 %>%<br></br>

      <%= submit_tag "Submit", size: 40 %>
    </h3>  
  </div> 
</div>
</div>
<% end %>
