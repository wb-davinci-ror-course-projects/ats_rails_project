<%= render "layouts/admin" %>
<%= form_tag "/admin/:id", method: "PUT" do %>


<% if @error != nil %>
  <h2 style="color: rgb(156, 18, 18)"><%= @error %></h2>
<% end %>

<div class="pad">
<h1 style="color: rgba(51, 51, 51, 0.67)"><%= label_tag "product_code", "Select the product to edit" %><br><h1>
  <%= select_tag :product_id, options_from_collection_for_select(
      Product.order(:id), :id, :product_code, @old_product.id), 
      prompt: "Choose product, then click edit" %>
    <%= submit_tag "Select", size: 20 %><br>
</div>

<hr style="color: white">   
<div class="pad">
<div class="row">
  <div class="col-md-4" style="color: rgba(51, 51, 51, 0.67)">
    <h3>
      <%= label_tag "category", "Product Category" %><br>
      <%= select_tag "category", options_for_select([
      "Diamond Products", "Safety Equipment", "Abrasives", "Glues & Sealer",
      "Pads", "Other Products"], @old_product.category), prompt: "Choose product category..." %><br></br>

  
      <%= label_tag "product_code", "Product Code" %><br>
      <%= text_field_tag "product_code", @old_product.product_code, size: 20 %><br></br>

      <%= label_tag "name", "Name" %><br>
      <%= text_field_tag "name", @old_product.name, size: 20 %><br></br>     
    </h3>
  </div>
  <div class="col-md-4" style="color: rgba(51, 51, 51, 0.67)">
    <h3>
      <%= label_tag "quantity", "Quantity" %><br>
      <%= text_field_tag "quantity", @old_product.quantity, size: 20 %><br></br>
      
      <%= label_tag :more_info, "More Info" %><br>
      <%= text_field_tag :more_info, @old_product.more_info, size: 20 %><br></br>
      
      <%= label_tag "description", "Description" %><br>
      <%= text_area_tag "description", @old_product.description, size: 20 %><br></br>

      <%= label_tag "price", "Price" %><br>
      <%= text_field_tag "price", @old_product.price, size: 20 %><br></br>
      
        <%= submit_tag "Update" %>
        <%= submit_tag "Delete" %>
    </h3>  
  </div> 
</div>
</div>
<% end %>
